<h3>Your Review</h3>
<div class="row">
    <form action="/reviews/{{review._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{review.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                {{#select review.status}}
                <select name="status" id="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                </select>
                {{/select}}
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell us more about that content you consumed :</h5>
                <textarea name="body" id="body" cols="30" rows="10">{{review.body}} </textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>